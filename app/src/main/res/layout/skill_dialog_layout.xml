<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/skill_dialog_layout">

    <Spinner
        android:id="@+id/spinner_dialog_skill_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:entries="@array/skill_array"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/et_dialog_skill_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="Enter Skills (Separated by Comma)"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/spinner_dialog_skill_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:entries="@array/skill_array"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/et_dialog_skill_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:gravity="start"
        android:layout_marginBottom="15dp"
        android:inputType="textMultiLine"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="Enter Skills (Separated by Comma)"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_skill_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <Button
            android:id="@+id/btn_skill_dialog_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="Done"/>

    </LinearLayout>

</LinearLayout>