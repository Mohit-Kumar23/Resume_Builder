<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/education_dialog_layout"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_dialog_edu_degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:hint="Degree"
        android:textColor="@color/black"
        android:inputType="text"
        android:textSize="18sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_dialog_edu_stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="Stream"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_dialog_edu_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="College"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_dialog_edu_batch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="Batch"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/et_dialog_edu_cgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_edit_custom"
        android:textSize="18sp"
        android:hint="CGPA (Performance)"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_edu_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <Button
            android:id="@+id/btn_edu_dialog_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="Done"/>

    </LinearLayout>
</LinearLayout>